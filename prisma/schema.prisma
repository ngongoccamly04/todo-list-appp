generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// MODEL TỐI GIẢN - CHỈ CẦN TẠO BẢNG USER TRƯỚC
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  
  @@map("User")  // QUAN TRỌNG: Đảm bảo tên bảng là "User"
}